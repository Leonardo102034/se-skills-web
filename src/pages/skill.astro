---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Videollamada - Skill">
  <div class="bg-gray-800 text-white min-h-screen flex flex-col font-sans">
    <!-- Top Navigation Bar -->
    <header class="flex justify-between items-center p-4 bg-gray-900 border-b border-gray-700">
      <button class="flex items-center justify-center w-10 h-10 bg-white rounded-full hover:bg-gray-100 transition-colors">
        <svg class="w-5 h-5 text-black" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
        </svg>
      </button>
      
      <div class="flex items-center gap-6 text-sm">
        <a href="#" class="hover:text-blue-300 transition-colors">Inicio</a>
        <a href="#" class="hover:text-blue-300 transition-colors">Skills</a>
        <a href="#" class="hover:text-red-400 transition-colors">Cerrar Sesión</a>
      </div>
    </header>

    <!-- Main Video Call Interface -->
    <main class="flex-1 flex overflow-hidden">
      <!-- Video Call Area -->
      <div class="flex-1 flex flex-col bg-gray-800">
        <!-- Video Call Header -->
        <div class="flex justify-between items-center p-4 bg-gray-800 border-b border-gray-700">
          <div class="flex items-center gap-4">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm" id="datetime-display"></span>
            </div>
            <div class="text-lg font-semibold">Mejorando nuestra Habilidad Blanda: Pensamiento crítico</div>
          </div>
          
          <div class="flex items-center gap-4">
            <a href="#" class="text-sm text-blue-400 hover:text-blue-300 transition-colors">Pedir ayuda</a>
            <a href="#" class="text-sm text-blue-400 hover:text-blue-300 transition-colors">Volver a la llamada principal</a>
            <div class="flex flex-col gap-1">
              <div class="w-1 h-1 bg-gray-400 rounded-full"></div>
              <div class="w-1 h-1 bg-gray-400 rounded-full"></div>
              <div class="w-1 h-1 bg-gray-400 rounded-full"></div>
            </div>
          </div>
        </div>

        <!-- Participants Grid -->
        <div class="flex-1 p-6">
          <div class="flex flex-col items-center justify-center gap-6 h-full">
            <!-- Agente Cricker -->
            <div class="bg-gray-700 rounded-xl overflow-hidden relative group personality-card personality-active w-[620px] h-80">
              <div class="w-full h-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
                <div class="w-24 h-24 bg-white rounded-full flex items-center justify-center shadow-lg">
                  <span class="text-3xl font-bold text-gray-800">AC</span>
                </div>
              </div>
              <div class="absolute bottom-3 left-3 bg-black bg-opacity-80 px-3 py-1 rounded-lg text-sm font-medium">
                Agente Cricker
              </div>
              <div class="absolute top-3 right-3 flex gap-2">
                <div class="w-2 h-2 bg-green-500 rounded-full personality-indicator"></div>
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="absolute top-3 left-3 bg-blue-500 bg-opacity-90 px-2 py-1 rounded-md text-xs font-semibold">
                Activo
              </div>
            </div>

            <!-- Usuario -->
            <div class="bg-gray-700 rounded-xl overflow-hidden relative group personality-card personality-active w-[620px] h-80">
              <div class="w-full h-full bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center">
                <div class="w-24 h-24 bg-white rounded-full flex items-center justify-center shadow-lg">
                  <span class="text-3xl font-bold text-gray-800">U</span>
                </div>
              </div>
              <div class="absolute bottom-3 left-3 bg-black bg-opacity-80 px-3 py-1 rounded-lg text-sm font-medium">
                Participante de la llamada
              </div>
              <div class="absolute top-3 right-3 flex gap-2">
                <div class="w-2 h-2 bg-green-500 rounded-full personality-indicator"></div>
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path>
                </svg>
              </div>
              <div class="absolute top-3 left-3 bg-purple-500 bg-opacity-90 px-2 py-1 rounded-md text-xs font-semibold">
                Activo
              </div>
            </div>
          </div>
        </div>

        <!-- Video Controls -->
        <div class="flex justify-center items-center p-4 bg-gray-800 border-t border-gray-700">
          <div class="flex items-center gap-4 relative">
            <!-- Microphone -->
            <button id="mic-button" class="bg-gray-700 hover:bg-gray-600 p-4 rounded-full transition-colors" title="Activar/Desactivar micrófono">
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7 4a3 3 0 016 0v4a3 3 0 11-6 0V4zm4 10.93A7.001 7.001 0 0017 8a1 1 0 10-2 0A5 5 0 015 8a1 1 0 00-2 0 7.001 7.001 0 006 6.93V17H6a1 1 0 100 2h8a1 1 0 100-2h-3v-2.07z" clip-rule="evenodd"></path>
              </svg>
            </button>

            <!-- Camera -->
            <button id="camera-button" class="bg-gray-700 hover:bg-gray-600 p-4 rounded-full transition-colors" title="Activar/Desactivar cámara">
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
              </svg>
            </button>

            <!-- Share Screen -->
            <button id="screen-share-button" class="bg-gray-700 hover:bg-gray-600 p-4 rounded-full transition-colors" title="Compartir pantalla">
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
              </svg>
            </button>

            <!-- More Options -->
            <div class="relative">
              <button id="more-options-button" class="bg-gray-700 hover:bg-gray-600 p-4 rounded-full transition-colors" title="Más opciones">
                <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path>
                </svg>
              </button>
              
              <!-- More Options Menu -->
              <div id="more-options-menu" class="hidden absolute bottom-full right-0 mb-2 w-48 bg-gray-700 rounded-lg shadow-lg border border-gray-600">
                <div class="py-2">
                  <button class="w-full text-left px-4 py-2 text-sm text-gray-300 hover:bg-gray-600 hover:text-white transition-colors flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M8 12a2 2 0 100-4 2 2 0 000 4z"></path>
                      <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.022 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                    </svg>
                    Ver participantes
                  </button>
                  <button class="w-full text-left px-4 py-2 text-sm text-gray-300 hover:bg-gray-600 hover:text-white transition-colors flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path>
                    </svg>
                    Configuración
                  </button>
                  <button class="w-full text-left px-4 py-2 text-sm text-gray-300 hover:bg-gray-600 hover:text-white transition-colors flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                    </svg>
                    Invitar personas
                  </button>
                  <div class="border-t border-gray-600 my-1"></div>
                  <button class="w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-gray-600 hover:text-red-300 transition-colors flex items-center gap-2">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                    </svg>
                    Reportar problema
                  </button>
                </div>
              </div>
            </div>

            <!-- End Call -->
            <button id="end-call-button" class="bg-red-600 hover:bg-red-500 p-4 rounded-full transition-colors" title="Salir de la llamada">
              <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Right Sidebar - Chat Panel -->
      <aside id="chat-sidebar" class="w-[520px] bg-gray-900 flex flex-col h-full transform transition-transform duration-300 ease-in-out translate-x-0">
        <!-- Chat Header -->
        <div class="flex-shrink-0 p-4 border-b border-gray-700">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-white">Chat</h3>
            <div class="flex items-center gap-2">
              <!-- Selector de idioma -->
              <select id="voice-language-selector" class="bg-gray-700 text-white px-2 py-1 rounded text-sm border border-gray-600 focus:outline-none focus:border-blue-500">
                <option value="es-MX">Español (México)</option>
                <option value="es-ES">Español (España)</option>
                <option value="es-AR">Español (Argentina)</option>
                <option value="es-CO">Español (Colombia)</option>
                <option value="es-CL">Español (Chile)</option>
                <option value="es-PE">Español (Perú)</option>
                <option value="en-US">English (US)</option>
                <option value="en-GB">English (UK)</option>
                <option value="fr-FR">Francais</option>
                <option value="pt-BR">Portugues (Brasil)</option>
              </select>
              <button id="tts-toggle" class="text-gray-400 hover:text-white transition-colors p-2 rounded" title="Activar/Desactivar voz del Agente">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.617.816L4.383 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.383l4-4.816a1 1 0 011-.108zM14.657 2.929a1 1 0 011.414 0A9.972 9.972 0 0119 10a9.972 9.972 0 01-2.929 7.071 1 1 0 01-1.414-1.414A7.971 7.971 0 0017 10c0-2.21-.894-4.208-2.343-5.657a1 1 0 010-1.414zm-2.829 2.828a1 1 0 011.415 0A5.983 5.983 0 0115 10a5.984 5.984 0 01-1.757 4.243 1 1 0 01-1.415-1.415A3.984 3.984 0 0013 10a3.983 3.983 0 00-1.172-2.828 1 1 0 010-1.415z" clip-rule="evenodd"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Chat Messages -->
        <div id="chat-panel" class="flex-1 flex flex-col min-h-0 relative">
          <div id="chat-messages" class="flex-1 p-4 space-y-3 overflow-y-auto scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-gray-800">
            <!-- Los mensajes se cargarán dinámicamente aquí -->
          </div>
          
          <!-- Botón para ir al final del chat -->
          <button id="scroll-to-bottom" class="absolute bottom-20 right-4 bg-blue-600 hover:bg-blue-500 text-white p-2 rounded-full shadow-lg transition-all duration-200 opacity-0 pointer-events-none" title="Ir al final">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>

          <!-- Chat Input -->
          <div class="flex-shrink-0 p-4 border-t border-gray-700 bg-gray-900">
            <div class="flex gap-2 items-end">
              <div class="flex-1">
                <input 
                  id="message-input" 
                  type="text" 
                  placeholder="Escribe un mensaje..." 
                  class="w-full bg-gray-800 text-white px-3 py-2 rounded-lg border border-gray-600 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 placeholder-gray-400 resize-none text-sm"
                />
              </div>
              <button 
                id="send-button" 
                class="bg-blue-600 hover:bg-blue-500 disabled:bg-gray-600 disabled:cursor-not-allowed px-3 py-2 rounded-lg transition-colors flex items-center gap-2 text-sm font-medium"
                title="Enviar mensaje"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"></path>
                </svg>
                <span class="hidden sm:inline">Enviar</span>
              </button>
            </div>
          </div>
        </div>
      </aside>

    </main>
  </div>

  <!-- Scripts -->
  <script src="/src/scripts/videoCallControls.js"></script>
  <script src="/src/scripts/chat.js"></script>
  
  <!-- Script para mostrar fecha y hora -->
  <script>
    function updateDateTime() {
      const now = new Date();
      const options = {
        weekday: 'long',
        year: 'numeric',
        month: 'long',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        hour12: true
      };
      
      const dateTimeString = now.toLocaleString();
      const datetimeElement = document.getElementById('datetime-display');
      
      if (datetimeElement) {
        datetimeElement.textContent = dateTimeString;
      }
    }
    
    // Actualizar inmediatamente y luego cada minuto
    updateDateTime();
    setInterval(updateDateTime, 60000);
  </script>

  <style>
    /* Estilos personalizados para el chat */
    .scrollbar-thin {
      scrollbar-width: thin;
    }
    
    .scrollbar-thumb-gray-600::-webkit-scrollbar-thumb {
      background-color: #4B5563;
      border-radius: 0.5rem;
    }
    
    .scrollbar-track-gray-800::-webkit-scrollbar-track {
      background-color: #1F2937;
    }
    
    .scrollbar-thin::-webkit-scrollbar {
      width: 8px;
    }
    
    /* Animación suave para el scroll */
    #chat-messages {
      scroll-behavior: smooth;
      overflow-y: auto;
      overflow-x: hidden;
      max-height: calc(100vh - 200px);
      min-height: 0;
    }
    
    /* Mejorar el scroll del chat */
    #chat-messages::-webkit-scrollbar {
      width: 8px;
    }
    
    #chat-messages::-webkit-scrollbar-track {
      background: #1F2937;
      border-radius: 4px;
    }
    
    #chat-messages::-webkit-scrollbar-thumb {
      background: #4B5563;
      border-radius: 4px;
      border: 1px solid #374151;
    }
    
    #chat-messages::-webkit-scrollbar-thumb:hover {
      background: #6B7280;
    }
    
    /* Efecto hover mejorado para los mensajes */
    .message-hover:hover {
      transform: translateX(2px);
      transition: transform 0.2s ease;
    }
    
    /* Indicador de nivel de micrófono */
    .mic-level-indicator {
      position: absolute;
      bottom: -2px;
      left: 50%;
      transform: translateX(-50%);
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background-color: #10B981;
      animation: pulse 1s infinite;
    }
    
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    
    /* Estilos para las personalidades del agente */
    .personality-card {
      transition: all 0.3s ease;
    }
    
    .personality-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    }
    
    .personality-indicator {
      animation: personalityPulse 2s infinite;
    }
    
    @keyframes personalityPulse {
      0%, 100% { 
        opacity: 1; 
        transform: scale(1);
      }
      50% { 
        opacity: 0.7; 
        transform: scale(1.1);
      }
    }
    
    /* Efecto de brillo para personalidades activas */
    .personality-active {
      position: relative;
      overflow: hidden;
    }
    
    .personality-active::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
      animation: shine 3s infinite;
    }
    
    @keyframes shine {
      0% { left: -100%; }
      100% { left: 100%; }
    }
    
    /* Estilos para el botón de chat */
    #chat-toggle-button {
      transition: all 0.3s ease;
    }
    
    #chat-toggle-button:hover {
      transform: translateY(-50%) scale(1.1);
    }
    
    /* Animación suave para el sidebar del chat */
    #chat-sidebar {
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    /* Efecto de deslizamiento */
    .chat-slide-in {
      transform: translateX(0);
    }
    
    .chat-slide-out {
      transform: translateX(100%);
    }
    
    /* Prevenir que el chat se expanda demasiado */
    #chat-panel {
      height: 100%;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }
    
    /* Asegurar que los mensajes no causen problemas de layout */
    .message-hover {
      word-wrap: break-word;
      overflow-wrap: break-word;
      hyphens: auto;
    }
    
    /* Mejorar el comportamiento del scroll */
    #chat-messages {
      flex: 1;
      overflow-y: auto;
      overflow-x: hidden;
      contain: layout style paint;
    }
    
    /* Mejorar la simetría y alineación de los participantes */
    .personality-card {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      transition: all 0.3s ease;
    }
    
    .personality-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    }
    
    /* Estilos adicionales para los cuadros más grandes */
    .personality-card {
      min-height: 20rem; /* 320px */
    }
  </style>
</Layout>
